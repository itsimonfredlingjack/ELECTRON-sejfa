{
  "name": "sejfa-command-center",
  "productName": "SEJFA Command Center",
  "version": "0.1.0",
  "description": "SEJFA Command Center: Electron desktop UI for monitoring and controlling the autonomous DevOps agent loop.",
  "main": ".vite/build/main.js",
  "private": true,
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "build": "electron-forge make",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "verify": "npm run lint && npm run typecheck && npm test && npm run test:e2e",
    "icons:generate": "node scripts/generate-icons.mjs"
  },
  "keywords": [],
  "author": "coffeedev",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-dmg": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron-forge/plugin-vite": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/vite": "^4.0.6",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^22.19.11",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "33.0.0",
    "jsdom": "^26.0.0",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.5.4",
    "vite": "^5.4.21",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.564.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-virtuoso": "^4.18.1",
    "socket.io-client": "^4.8.1",
    "tree-kill": "^1.2.2",
    "zustand": "^5.0.3"
  }
}
